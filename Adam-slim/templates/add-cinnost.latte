{extends 'layout.latte'}

{block title}Pridať položku protokolu {/block}

{*rezervácia, položka rotokolu, typ opravy, spotreba materialu, skladova karta*}
{block body}
    <div class="container">
        <br>
        <h1>{include title}</h1>
        <form action="{link add-cinnost}" method="post">
            <div class="row">
                <div class="col-6">

                    <label>Název činnosti</label>

                    <input type="text" name="nc" value=""
                           class="form-control">
                    <br>
                    <label>Cena za práci</label>
                    <input type="text" name=czp value=""
                           class="form-control">
                    <br>
                    <label>ID Protokolu</label>
                    {foreach $protokol as $rpo}

                    <input type="text" name=pk value="{$rpo['protokol_key']}"
                           class="form-control">
                    {/foreach}
                    <br>
                    <label>ID opravy</label>
                    {foreach $typ_opravy as $to}

                        <input type="text" name=tok value="{$to['typ_opravy_key']+1}"
                               class="form-control">
                    {/foreach}
                    <br>

                    <button type="submit" class="btn btn-primary">
                        <span class="fa fa-save"></span>
                        Vytvořit činnost
                    </button>
                </div>
            </div>
        </form>


{/block}